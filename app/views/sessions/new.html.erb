<%= form_for @user, url: sessions_path(@user), method: :post do |f|%>
  <form>


    <% if @user.errors.any? %>
    <div id="container">
      <h3><b>Uh-oh! <%= pluralize(@user.errors.count, "error") %> prohibited you from signing in:</b></h3>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
    <% end %>

<h1 class="header">Log in</h1>

  <div class="container">

    <p><%=f.label "Username"%> </p></br>
    <%= f.text_field :username%> </br>
  </div>

    <div class="container">
    <p><%=f.label "Password"%></br></p>
    <%= f.password_field :password%> </br>
  </div>
  <div class="container">
    <%= f.submit "Continue your travel journey!"%> </br>
</div>
    </form>
<% end %>
