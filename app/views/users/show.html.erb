  <div class="pic">
    <%= render "/layouts/user_icon" %>
  </div>

  <div>
    <h1><%= "#{@user.first_name.capitalize } #{@user.last_name.capitalize}"%></h1>
    <p><strong>About Me:</strong> <%= @user.bio %></p>
    <p><strong>Email:</strong>  <%= @user.email %></p>
    <!-- <a href= <%= "@user.email" %> >Email</a> -->
    <p><%= link_to 'Edit', edit_user_path(@user) %></p>
    <p><%= link_to 'Log out', edit_user_path(@user) %></p>
  </div>



  <div class="list-container">
    <div class="list-container-list">
      <table>
        <tr>
          <th>City (Visit)</th>
        </tr>
        <% @cities.each do |city| %>
        <tr>
        <td>
            <p><%= city.name %></p>
        </td>
        </tr>
        <% end %>
      </table>
    </div>

    <div class="list-container-list">
      <table>
        <tr>
          <th>City (Wish)</th>
        </tr>
        <% @cities.each do |city| %>
        <tr>
        <td>
            <p><%= city.name %></p>
        </td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>

</div>
