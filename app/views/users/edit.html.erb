<h1>Edit Your Profile</h1>

<%= form_for @user do |f| %>

  <div class="field">
    <%= f.label :first_name, "First Name:" %><br>
    <%= f.text_field :first_name %><br>
    <br>
  </div>

  <div class="field">
    <%= f.label :last_name, "Last Name:" %><br>
    <%= f.text_field :last_name %><br>
    <br>
  </div>

  <div class="field">
    <%= f.label :bio, "About Me:" %><br>
    <%= f.text_area :bio %><br>
    <br>
  </div>

  <div class="actions">
    <%= f.submit "Save Changes"%>
  </div>


