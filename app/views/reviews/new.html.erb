<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">

  </head>
  <body>
    <%= render "layouts/navbar" %>
    <div class="review-form">
      <h2>Review Form</h2>
      <%= form_for @review, url: reviews_path,  method: :post do |f|%>
        <%= f.label "Review" %> <br>
        <%= f.text_area :description %> <br>
        <%= f.label "Rating" %> <br>
        <%= f.number_field :rating %> <br> <br>
        <%= f.submit %>
      <% end %>
    </div>
  </body>
</html>
